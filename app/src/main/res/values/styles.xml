<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme_card" parent="android:Theme.Light" />

    <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
</style>

<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
</style>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

</resources>
